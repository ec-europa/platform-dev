{
  "require": {
    "drupal/phing-drush-task": "1.0",
    "drush/drush": "dev-master",
    "pear/versioncontrol_git": "dev-master",
    "phing/phing": "~2.10"
  },
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "drupal/phing-drush-task",
        "version": "1.0",
        "source": {
          "url": "http://git.drupal.org/project/phingdrushtask.git",
          "type": "git",
          "reference": "7.x-1.0"
        },
        "autoload": { "classmap": [ "DrushTask.php" ] },
        "include-path": [ "." ]
      }
    }
  ],
  "config": {
    "bin-dir": "bin/"
  }
}
