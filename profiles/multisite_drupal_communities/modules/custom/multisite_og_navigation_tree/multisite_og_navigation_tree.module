 *
 ****************************/

function _mont_access_vocabulary($node) {
  global $user;
    
  if (!_mont_is_group($node)) {
    return FALSE;
  }
  
  if ($access = og_node_access($node, 'update', $user)) {
    if ($access != NODE_ACCESS_DENY) {
      return TRUE;
    }
  }

  if ($user->uid == $node->uid) {
    return TRUE;
  }
  return FALSE;
}

