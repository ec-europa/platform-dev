/**
 * Implements callback to access "Content type" tab.
 */
function _og_content_type_admin_is_admin_access_callback($nid) {
  $og_administer_access = og_user_access('node', $nid, 'administer group');
  if ($og_administer_access) {
    return TRUE;
  }
  else {
    return FALSE;
  }
}

