      ),
      array(
        'link_title' => 'Resources for partners',
        'link_path' => 'http://ec.europa.eu/info/resources-partners',
        'menu_name' => 'menu-nexteuropa-service-links',
        'weight' => -49,
        'expanded' => 0,
        'options' => array(),
      ),
      array(
        'link_title' => 'Cookies',
        'link_path' => 'https://ec.europa.eu/info/cookies',
        'menu_name' => 'menu-nexteuropa-service-links',
        'weight' => -48,
