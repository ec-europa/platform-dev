/**
 * Implements hook_entity_load().
 */
function nexteuropa_editorial_entity_load($entities, $type) {
  foreach ($entities as $entity) {
    // There is not entity_type attribute existing for all entity types.
    // Then we inject it in entities that do not have it.
    // See https://www.drupal.org/node/1042822 for more info.
    if (!isset($entity->entity_type)) {
      $entity->entity_type = $type;
    }
    $settings = _nexteuropa_editorial_wysiwyg_tracking_settings($entity);

    if ($settings['is_activate']) {
      _nexteuropa_editorial_set_tracking_flags($entity, $type);
    }
  }
}

/**
 * Implements hook_field_attach_form().
 */
function nexteuropa_editorial_field_attach_form($entity_type, $entity, &$form, &$form_state, $langcode) {
  // Only node entities are supported.
  if (($entity_type == 'node') && isset($entity->tracking_activate)) {
    $form['tracking_activate'] = array(
      '#type' => 'value',
      '#value' => $entity->tracking_activate,
    );
    if (!isset($form['language'])) {
      // The form item containing the entity can change from an entity to
      // another. Then we set it like that to easy future treatment.
      $form['language'] = array(
        '#type' => 'value',
        '#value' => $langcode,
      );
    }
    $form['#validate'][] = '_nexteuropa_editorial_tracking_entity_validate';
  }
}
