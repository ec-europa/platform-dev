<?php

/**
 * @file
 * Wiki OG module file.
 */

include_once 'wiki_og.features.inc';
include_once 'wiki_og.views_alter.inc';

/**
 * Implements hook_modules_enabled().
 */
function wiki_og_modules_enabled($modules) {
  if (in_array('wiki_og', $modules)) {
    // Force feature revert to update og permissions.
    features_revert(array('wiki_og' => array('og_features_permission')));
  }
}

/**
 * Implements hook_menu().
 */
function wiki_og_menu() {
  $items = array();

  $items['community/%group_name/wiki'] = array(
    'title' => 'Wikis',
    'page callback' => 'views_page',
    'page arguments' => array('wiki_list', 'page_2', 1),
    'access callback' => 'user_access',
    'access arguments' => array('access content'),
    'type' => MENU_NORMAL_ITEM,
    'menu_name' => 'menu-communities-menu',
    'weight' => 1,
  );

  return $items;
}
