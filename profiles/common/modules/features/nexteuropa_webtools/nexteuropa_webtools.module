/**
 * AJAX page callback.
 *
 * @see: nexteuropa_token_ckeditor_menu()
 */
function nexteuropa_webtools_ajax_callback($editor_id = '') {
  drupal_add_js(drupal_get_path('module', 'nexteuropa_webtools') . '/js/nexteuropa_webtools_ckeditor.js');
  drupal_add_css(drupal_get_path('module', 'nexteuropa_webtools') . '/css/nexteuropa_webtools_ckeditor.css');

  $filter_view = variable_get('nexteuropa_webtools_filter_view', NEXTEUROPA_WEBTOOLS_DEFAULT_FILTER_VIEW);
  list($view_name, $display_id) = explode(':', $filter_view);
  $content = '';
  $content .= theme('webtools_ckeditor_tips');
  $content .= views_embed_view($view_name, $display_id);

  $commands = array();
  $commands[] = ajax_command_html('#' . $editor_id, $content);
  return array('#type' => 'ajax', '#commands' => $commands);
}

/**
 * Menu access callback.
 *
 * @see: nexteuropa_token_ckeditor_menu()
 */
function nexteuropa_webtools_ajax_access_callback() {
  $filter_view = variable_get('nexteuropa_webtools_filter_view', NEXTEUROPA_WEBTOOLS_DEFAULT_FILTER_VIEW);
  list($view_name, $display_id) = explode(':', $filter_view);
  $view = views_get_view($view_name);
  return $view && $view->access($display_id);
}
