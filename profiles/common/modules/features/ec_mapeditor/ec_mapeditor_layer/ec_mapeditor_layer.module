/**
 * Class providing JavaScript settings for a map layer.
 */
class MapLayerSettings {
  /**
   * Defines list of default settings.
   */
  public function __construct() {
    $this->settings = array(
      'clustering' => array(
        'cluster_markers' => TRUE,
      ),
      'icon' => array(
        'icon' => 'blue',
      ),
      'popup' => array(
        'show_popup' => TRUE,
        'popin' => TRUE,
      ),
      'control' => array(
        'enabled' => TRUE,
        'show_in_control' => TRUE,
      ),
      'show_settings' => FALSE,
      'attribution' => array(
        'attributionControl' => FALSE,
        'attribution' => NULL,
      ),
      'style' => array(
        'fill_color' => '#C8E9F2',
        'fill_opacity' => 0.9,
        'border_weight' => 1,
        'border_color' => "#0065B1",
        'border_opacity' => 1,
        'dash_array' => 2,
      ),
      'tiles' => array(
        'tiles' => 'osmec',
      ),
    );
  }

  /**
   * Changes the default settings.
   */
  public function customize($settings) {
    foreach ($settings as $key => $setting) {
      $this->settings[$key] = $setting;
    }
  }

  /**
   * Removes a setting.
   */
  public function remove($settings) {
    foreach ($settings as $key => $setting) {
      unset($this->settings[$key]);
    }
  }

}

