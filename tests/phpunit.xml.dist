<?xml version="1.0" encoding="utf-8" ?>
<phpunit bootstrap="{{ phpunit.dir }}/bootstrap.php"
         backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         stopOnFailure="false">
    <testsuites>
        <testsuite>
            <directory>{{ platform.build.dir }}/profiles/common/modules/custom/*/src/Tests</directory>
            <directory>{{ platform.build.dir }}/profiles/common/modules/features/*/src/Tests</directory>
        </testsuite>
    </testsuites>
    <php>
        <!-- Set error reporting to E_ALL. -->
        <ini name="error_reporting" value="32767"/>
        <!-- Do not limit the amount of memory tests take to run. -->
        <ini name="memory_limit" value="-1"/>
        <const name="DRUPAL_ROOT" value="{{ platform.build.dir }}"/>
        <const name="BASE_URL" value="{{ phpunit.base_url }}"/>
        <server name="REMOTE_ADDR" value="127.0.0.1"/>
    </php>
</phpunit>
