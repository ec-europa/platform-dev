<?php

/**
 * Implementing hook_enable()
 */
function tmgmt_og_enable() {
  // Add Organic Group field.
  entity_info_cache_clear();
  entity_get_info();
  og_create_field(OG_AUDIENCE_FIELD, 'tmgmt_job', 'tmgmt_job');
  
  db_update('system')
    ->fields(array('weight' => 100))
    ->condition('name', 'tmgmt_og', '=')
    ->execute();  
}
